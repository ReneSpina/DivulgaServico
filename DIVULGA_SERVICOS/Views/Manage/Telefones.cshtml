@model IEnumerable<DIVULGA_SERVICOS.Models.CAD_PES_FONE>

@{
    ViewBag.Title = "Telefones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Endereços</h2>

<p>
    @Html.ActionLink("Adicionar Telefone", "CriarTelefone")
</p>


<div id="no-more-tables">
    <table class="col-md-12 table-bordered table-striped table-condensed cf">
        <thead class="cf">
            <tr>
                <th>
                    Celular
                </th>
                <th>
                    WhatsApp
                </th>
                <th>
                    Operadora
                </th>
                <th>
                    Fixo
                </th>
                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-title="Celular">
                        @Html.DisplayFor(model => item.CD_CELULAR)
                    </td>
                    <td data-title="WhatsApp">
                        @if (@Html.ValueFor(model => item.CD_CELULAR).ToString() == "")
                        {

                        }
                        else
                        {
                            if (@Html.ValueFor(model => item.WHATSAPP).ToString() == "True")
                            {
                                var sim = "Sim";
                                @sim
                            }
                            else
                            {
                                var nao = "Não";
                                @nao
                            }
                        }
                    </td>
                    <td data-title="Operadora">
                        @if (@Html.ValueFor(model => item.CD_CELULAR).ToString() == "")
                        {

                        }
                        else
                        {
                            if (@Html.DisplayFor(model => item.NM_OPERADORA).ToString() != "Outros")
                            {
                                @Html.DisplayFor(model => item.NM_OPERADORA)
                            }
                            else
                            {
                                var outros = "";
                                @outros
                            }
                        }
                    </td>
                    <td  data-title="Fixo">
                        @Html.DisplayFor(modelItem => item.CD_FIXO)
                    </td>
                    <td data-title="Configuração">
                        @*@Html.ActionLink("Editar", "EditarEndereco", new {  id=item.SQ_ENDERECO }) |*@
                        @Html.ActionLink("Detalhes", "DetalhesTelefone", new { id = item.SQ_FONE }) |
                        @Html.ActionLink("Deletar", "DeletarTelefone", new { id = item.SQ_FONE })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    @Html.ActionLink("Voltar a tela de gerenciamento", "Index")
