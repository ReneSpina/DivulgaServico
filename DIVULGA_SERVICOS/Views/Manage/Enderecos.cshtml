@model IEnumerable<DIVULGA_SERVICOS.Models.CAD_PES_ENDERECO>

@{
    ViewBag.Title = "Endereços";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Endereços</h2>

<p>
    @Html.ActionLink("Adicionar Endereço", "CriarEndereco")
</p>

<div id="no-more-tables">
    <table class="col-md-12 table-bordered table-striped table-condensed cf">
        <thead class="cf">
            <tr>
                <th>
                    Logradouro
                </th>
                <th>
                    Número
                </th>
                <th>
                    Cidade
                </th>
                <th>
                    Estado
                </th>
                <th>
                    CEP
                </th>
                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-title="Logradouro">
                        @Html.DisplayFor(modelItem => item.NM_LOGRADOURO)
                    </td>
                    <td data-title="Número">
                        @Html.DisplayFor(modelItem => item.NUMERO)
                    </td>
                    <td data-title="Cidade">
                        @Html.DisplayFor(modelItem => item.NM_CIDADE)
                    </td>
                    <td data-title="Estado">
                        @Html.DisplayFor(modelItem => item.NM_ESTADO)
                    </td>
                    <td data-title="CEP">
                        @Html.DisplayFor(modelItem => item.CD_CEP)
                    </td>
                    <td data-title="Configurações">
                        @*@Html.ActionLink("Editar", "EditarEndereco", new {  id=item.SQ_ENDERECO }) |*@
                        @Html.ActionLink("Detalhes", "DetalhesEndereco", new { id = item.SQ_ENDERECO }) |
                        @Html.ActionLink("Deletar", "DeletarEndereco", new { id = item.SQ_ENDERECO })
                    </td>
                </tr>
            }
        </tbody>
</table>
    </div>
@Html.ActionLink("Voltar a tela de gerenciamento", "Index")