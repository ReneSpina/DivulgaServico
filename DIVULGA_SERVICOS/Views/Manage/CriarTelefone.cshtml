@model DIVULGA_SERVICOS.Models.CAD_PES_FONE

@{
    ViewBag.Title = "Criar Telefone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
          google_ad_client: "ca-pub-2571448761678693",
          enable_page_level_ads: true
        });
    </script>
</head>
<h2>Criar Telefone</h2>

@using (Html.BeginForm("CriarTelefone", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="control-label col-md-2" for="CD_FIXO">Fixo*</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CD_FIXO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CD_FIXO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="CD_CELULAR">Celular*</label>
        <div class="col-md-5">
            @Html.EditorFor(model => model.CD_CELULAR, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CD_CELULAR, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="autocomplete">Operadora*</label>
        <div class="col-md-5">
            <select name="NM_OPERADORA" class="form-control">
                <option value="Tim">Tim</option>
                <option value="Claro">Claro</option>
                <option value="Vivo">Vivo</option>
                <option value="Oi">Oi</option>
                <option value="Outro">Outro</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="WHATSAPP">Whatsapp*</label>
        <div class="col-md-5">
            <select name="WHATSAPP" class="form-control">
                <option value="true">Sim</option>
                <option value="false">Não</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Criar" class="btn btn-default" />
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink("Voltar a lista de telefones", "Telefones")
</div>
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery.mask.min.js"></script>
<script>
    $("#CD_CELULAR").mask("(00) 90000-0000");
    $("#CD_FIXO").mask("(00) 0000-0000");
</script>
