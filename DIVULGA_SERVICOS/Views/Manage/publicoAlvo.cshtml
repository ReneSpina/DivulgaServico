@model DIVULGA_SERVICOS.Models.CAD_PES_JURIDICA

@{
    ViewBag.Title = "Nosso Público";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Público Alvo:</h4>
<div class="well">
    @if (Model.CAD_PORTE_EMPRESA.PESSOA_FISICA == true)
    {
        <p>Pessoa Física</p>
    }
    @if (Model.CAD_PORTE_EMPRESA.MICRO_EMPRESA == true)
    {
        <p>Micro Empresa</p>
    }
    @if (Model.CAD_PORTE_EMPRESA.PEQUENAS_EMPRESAS == true)
    {
        <p>Pequenas Empresas</p>
    }
    @if (Model.CAD_PORTE_EMPRESA.EMPRESA_GRANDE_PORTE == true)
    {
        <p>Empresas de Grande Porte</p>
    }
</div>

<div>
    @Html.ActionLink("Editar Público Alvo", "EditarPublicoAlvo")
    <br />
    @Html.ActionLink("Voltar a tela de gerenciamento", "Index")
</div>