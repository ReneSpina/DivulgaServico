@model DIVULGA_SERVICOS.Models.CAD_CATEGORIA

@{
    ViewBag.Title = "Deletar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar</h2>

<h3>Você tem certeza que quer deletar isso?</h3>
<div>
    <h4>Deletar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NM_NOME)
        </dd>

        <dt>
            Descricao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DS_DESCRICAO)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista de serviços", "Servicos")
        </div>
    }
</div>
