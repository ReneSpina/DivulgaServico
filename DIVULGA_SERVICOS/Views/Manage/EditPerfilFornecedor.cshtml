@model DIVULGA_SERVICOS.Models.CAD_PESSOA
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({
          google_ad_client: "ca-pub-2571448761678693",
          enable_page_level_ads: true
        });
        </script>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Perfil</title>
</head>
<body>
    <form action="/Manage/EditarPerfilFornecedor" method="post">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Editar Perfil</h4>
            <hr>

            <div class="form-group">
                <label class="control-label col-md-2" for="CAD_PES_FORNECEDOR.NM_NOME_PESSOA">NOME*</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" data-val="true" data-val-length="O campo NM_NOME_PESSOA deve ser uma cadeia de caracteres com um comprimento máximo de 255." data-val-length-max="255" id="CAD_PES_FORNECEDOR.NM_NOME_PESSOA" name="CAD_PES_FORNECEDOR.NM_NOME_PESSOA" type="text" value="@Model.NM_NOME_PESSOA">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="CAD_PES_FORNECEDOR.Email">Email*</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="CAD_PES_FORNECEDOR.Email" name="CAD_PES_FORNECEDOR.Email" type="text" value="@Model.Email">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="CD_CNPJ">CPF ou CNPJ*</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" data-val="true" data-val-length-max="30" id="CAD_PES_FORNECEDOR.CD_CNPJ" name="CAD_PES_FORNECEDOR.CD_CNPJ" type="text" value="@Model.CAD_PES_FORNECEDOR.CD_CNPJ">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="LockoutEnabled">RECEBER EMAILS</label>
                <div class="col-md-10">
                    @if (Model.NEWSLETTER == true)
                    {
                        <span class="success">
                            Você deve estar recebendo nossos emails.<br />
                            Caso não queira mais recber, marque a caixa ao lado!
                        </span>
                        @Html.EditorFor(m => m.NEWSLETTER)
                    }
                    else
                    {
                        <span class="danger">
                            Você não deve estar recebendo nossos emails.<br />
                            Caso queira recber, marque a caixa ao lado!
                        </span>
                        @Html.EditorFor(m => m.NEWSLETTER)
                    }
                </div>
            </div>

            @*<div class="form-group">
                <label class="control-label col-md-2" for="LockoutEnabled">DESABILITAR CONTA</label>
                <div class="col-md-10">
                    @if (Model.CAD_PES_JURIDICA.ATIVO == true)
                    {
                        <span class="success">
                            Sua conta está ativa.<br />
                            Clique na caixa ao lado para desativar sua conta!
                        </span>
                        @Html.EditorFor(m => m.CAD_PES_JURIDICA.ATIVO)
                    }
                    else
                    {
                        <span class="danger">
                            Sua conta está inativa.<br />
                            Clique na caixa ao lado para ativar sua conta!
                        </span>
                        @Html.EditorFor(m => m.CAD_PES_FORNECEDOR.ATIVO)
                    }
                </div>
            </div>*@

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="salvar" value="Salvar" class="btn btn-default">
                </div>
            </div>
        </div>
    </form>

    <div>
        @Html.ActionLink("Voltar a tela de gerenciamento", "Index")
    </div>
</body>
</html>