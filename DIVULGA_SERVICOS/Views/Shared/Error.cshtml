@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}
@{
    if (String.IsNullOrEmpty(ViewBag.errorMessage))
    {
        <div class="alert alert-danger">
            <strong>Atenção!</strong> Um erro aconteceu enquanto processamos sua solicitação. Tente novamente.
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <strong>Atenção!</strong> @ViewBag.errorMessage
        </div>
    }
}