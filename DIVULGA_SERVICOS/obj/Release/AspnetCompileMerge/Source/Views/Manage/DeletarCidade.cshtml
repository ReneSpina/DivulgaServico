@model DIVULGA_SERVICOS.Models.CAD_CIDADES_DIVULGA_FORNECEDOR

@{
    ViewBag.Title = "Deletar Cidade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar Cidade</h2>

<h3>Você tem certeza de que quer deletar esta cidade?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Cidade
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NM_CIDADE)
        </dd>

        <dt>
            Estado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NM_ESTADO)
        </dd>

        <dt>
            Nível Brasil
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BRASIL)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista de cidades", "CidadesFornecedor")
        </div>
    }
</div>
