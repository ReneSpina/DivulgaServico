@model DIVULGA_SERVICOS.Models.CAD_PRODUTO_FORNECEDOR

@{
    ViewBag.Title = "Deletar Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Você tem certeza de que quer deletar este produto?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NM_PRODUTO)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DS_DESCRICAO)
        </dd>

        <dt>
            Valor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VALOR_PRODUTO)
        </dd>

        <dt>
            Data da Criação
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DT_CRIACAO)
        </dd>

        <dt>
            Ativo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ATIVO)
        </dd>

        <dt>
            Tags
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TAGS)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista de produtos", "Produtos")
        </div>
    }
</div>
