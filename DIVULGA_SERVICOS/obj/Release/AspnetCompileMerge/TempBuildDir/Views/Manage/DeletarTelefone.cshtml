@model DIVULGA_SERVICOS.Models.CAD_PES_FONE

@{
    ViewBag.Title = "Deletar Telefone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar Telefone</h2>

<h3>Você tem certeza de que quer deletar este telefone?</h3>
<div>
    <dl class="dl-horizontal">

        <dt>
            Celular
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CD_CELULAR)
        </dd>

        <dt>
            Fixo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CD_FIXO)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista de telefones", "Telefones")
        </div>
    }
</div>
