@model IEnumerable<DIVULGA_SERVICOS.Models.CAD_PRODUTO_FORNECEDOR>

@{
    ViewBag.Title = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar Produtos", "CriarProduto")
</p>
<table class="table">
    <tr>
        <th>
            Nome Produto
        </th>
        <th>
            Descrição
        </th>
        <th>
            Valor
        </th>
        <th>
            Data da Criação
        </th>
        <th>
            Nome do Fornecedor
        </th>
        <th>
            Acessar Fornecedor
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NM_PRODUTO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DS_DESCRICAO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VALOR_PRODUTO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DT_CRIACAO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CAD_PES_FORNECEDOR.CAD_PESSOA.NM_NOME_PESSOA)
            </td>
            <td>
                Link
            </td>
        </tr>
    }

</table>
