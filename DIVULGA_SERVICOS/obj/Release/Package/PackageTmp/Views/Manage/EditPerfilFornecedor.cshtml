@model DIVULGA_SERVICOS.Models.CAD_PESSOA
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Perfil</title>
</head>
<body>
    <form action="/Manage/EditarPerfilFornecedor" method="post">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Editar Perfil</h4>
            <hr>

            <div class="form-group">
                <label class="control-label col-md-2" for="CAD_PES_FORNECEDOR.NM_NOME_PESSOA">NOME*</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" data-val="true" data-val-length="O campo NM_NOME_PESSOA deve ser uma cadeia de caracteres com um comprimento máximo de 255." data-val-length-max="255" id="CAD_PES_FORNECEDOR.NM_NOME_PESSOA" name="CAD_PES_FORNECEDOR.NM_NOME_PESSOA" type="text" value="@Model.NM_NOME_PESSOA">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="CAD_PES_FORNECEDOR.Email">Email*</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="CAD_PES_FORNECEDOR.Email" name="CAD_PES_FORNECEDOR.Email" type="text" value="@Model.Email">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="CD_CNPJ">CPF ou CNPJ*</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" data-val="true" data-val-length-max="30" id="CAD_PES_FORNECEDOR.CD_CNPJ" name="CAD_PES_FORNECEDOR.CD_CNPJ" type="text" value="@Model.CAD_PES_FORNECEDOR.CD_CNPJ">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ATIVO">Desabilitar Conta</label>
                <div class="col-md-10">
                    @Html.CheckBoxFor(m => m.CAD_PES_FORNECEDOR.ATIVO)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="salvar" value="Salvar" class="btn btn-default">
                </div>
            </div>
        </div>
    </form>

    <div>
        @Html.ActionLink("Voltar a tela de gerenciamento", "Index")
    </div>
</body>
</html>