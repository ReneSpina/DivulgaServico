@model IEnumerable<DIVULGA_SERVICOS.Models.CAD_PRODUTO_FORNECEDOR>

@{
    ViewBag.Title = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
          google_ad_client: "ca-pub-2571448761678693",
          enable_page_level_ads: true
        });
    </script>
</head>
<h2>Produtos</h2>

<div class="alert alert-info">
    <strong>Info!</strong> Os produtos com o valor R$ 0,00 significa que o fornecedor não quis disponibilizar o valor do produto.
</div>
<div id="no-more-tables">
    <table class="col-md-12 table-bordered table-striped table-condensed cf">
        <thead class="cf">
            <tr>
                <th>
                    Produto
                </th>
                <th>
                    Descrição
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Data da Criação
                </th>
                <th>
                    Fornecedor
                </th>
                <th>
                    Acessar Fornecedor
                </th>
                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-title="Produto">
                        @Html.DisplayFor(modelItem => item.NM_PRODUTO)
                    </td>
                    <td data-title="Descrição">
                        @Html.DisplayFor(modelItem => item.DS_DESCRICAO)
                    </td>
                    <td data-title="Valor">
                        @Html.DisplayFor(modelItem => item.VALOR_PRODUTO)
                    </td>
                    <td data-title="Data da Criaçãp">
                        @Html.FormatValue(Convert.ChangeType(item.DT_CRIACAO, typeof(object)),
                            "{0: dd/MM/yy}")
                    </td>
                    <td data-title="Fornecedor">
                        @Html.DisplayFor(modelItem => item.CAD_PES_FORNECEDOR.CAD_PESSOA.NM_NOME_PESSOA)
                    </td>
                    <td data-title="Acessar Fornecedor">
                        <a href="~/Manage/fornecedorProdutos?userId=@item.CD_PESSOA">Fornecedor</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <br />
    @Html.ActionLink("Voltar a tela de gerenciamento", "Index")
