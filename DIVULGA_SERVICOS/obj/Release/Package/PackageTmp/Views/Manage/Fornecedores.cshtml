@model IEnumerable<DIVULGA_SERVICOS.Models.CAD_PRODUTO_FORNECEDOR>

@{
    ViewBag.Title = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Produtos</h2>

<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Descrição
        </th>
        <th>
            Valor
        </th>
        <th>
            Data da Criação
        </th>
        <th>
            Fornecedor
        </th>
        <th>
            Acessar Fornecedor
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NM_PRODUTO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DS_DESCRICAO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VALOR_PRODUTO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DT_CRIACAO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CAD_PES_FORNECEDOR.CAD_PESSOA.NM_NOME_PESSOA)
            </td>
            <td>
                <a href="~/Manage/fornecedorProdutos?userId=@Model.FirstOrDefault().CD_PESSOA">Fornecedor</a>
            </td>
        </tr>
    }
</table>
<br />
@Html.ActionLink("Voltar a tela de gerenciamento", "Index")